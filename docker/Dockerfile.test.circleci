FROM python:3.8

WORKDIR /microblog

# COPY . .
COPY app app
COPY migrations migrations
COPY requirements requirements
COPY requirements.txt microblog.py ./
COPY test.sh .

RUN python -m venv .venv
ENV FLASK_APP microblog.py
RUN .venv/bin/pip3 install -r requirements.txt

RUN chmod +x test.sh

ENTRYPOINT ["./test.sh"]